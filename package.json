{
  "name": "plugged-admin",
  "version": "1.0.0",
  "description": "Admin Dashboard for Plugged e-commerce",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:prod": "NODE_ENV=production node server.js",
    "start:dev": "NODE_ENV=development node server.js",
    "dev": "nodemon server.js",
    "electron": "electron main.js",
    "electron-dev": "electron main.js --dev",
    "test": "node server.js --test-supabase",
    "test:backend": "node -e \"require('./test-backend-connection.js')\"",
    "build": "echo 'Web app ready - no build needed'",
    "postinstall": "echo 'Setup complete'",
    "deploy:render": "echo 'Push to main branch to deploy on Render'",
    "deploy:vercel": "vercel --prod"
  },
  "build": {
    "appId": "com.plugged.admin",
    "productName": "Plugged Admin",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "axios": "^1.6.2",
    "dotenv": "^17.2.0",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "nodemon": "^3.0.2"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.6.4",
    "electron-store": "^8.1.0",
    "vite": "^5.0.6"
  }
}
